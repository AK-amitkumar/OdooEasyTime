             x:Class="EasyTimeOdoo.Modal.NewActivityModal">
    
    <TableView Intent="Form">
        <TableRoot>
            <TableSection x:Name="table">
                <TextCell Text="Projekt" Detail="Task"></TextCell>
                <EntryCell Label="Title" Placeholder="Placeholder her..."></EntryCell>
                <ViewCell>
                    <StackLayout Orientation="Horizontal" Padding="13, 0">
                        <Label Text="Starts" VerticalOptions="Center"></Label>
                        <DatePicker Date="1 Jan 2016" HorizontalOptions="End"></DatePicker>
                        <TimePicker Time="13:00" HorizontalOptions="Center"></TimePicker>
                        <TimePicker Time="13:00" HorizontalOptions="Start"></TimePicker>
                    </StackLayout>
                </ViewCell>
            </TableSection>
        </TableRoot>
    </TableView>


