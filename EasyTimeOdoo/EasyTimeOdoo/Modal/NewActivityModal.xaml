<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyTimeOdoo.Modal.NewActivityModal">
    
    <ListView x:Name="taskList">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="{Binding task_name}"></Label>
                        <Label Text="{Binding task_total_hours}"></Label>
                        <Button Text="Opdater" Clicked="task_clicked"></Button>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>

        </ListView.ItemTemplate>                   

    </ListView>


