<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyTime.Modal.NewActivityModal">

    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Enter name for new person..." x:Name="nameEntry"></Entry>
            <Entry Placeholder="Enter status for new person..." x:Name="statusEntry"></Entry>
            <Button Text="Create person" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>