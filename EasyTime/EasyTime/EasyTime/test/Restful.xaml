<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyTime.test.Restful">
    <StackLayout>
        <StackLayout>
            <Button Text="Add" Clicked="OnAdd"></Button>
            <Button Text="Update" Clicked="OnUpdate"></Button>
            <Button Text="Delete" Clicked="OnDelete"></Button>
        </StackLayout>
        <ListView x:Name="projectsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding project_name}"></TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>